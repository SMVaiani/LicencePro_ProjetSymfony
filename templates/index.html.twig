<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Enchere VIP : Bienvenue{% endblock %}</title>
        {% block stylesheets %}
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
			<link href="css/index.css" rel="stylesheet">
		{% endblock %}
    </head>
	
    <body class="border-right border-left">
        {% block body %}
		<header>
		<nav class="navbar navbar-dark bg-dark">
			<a href="/"><img src="images/logo.png" title="Accueil" alt="Tahiti" id="img-logo"></a>
		{% if app.user %}
			<a href="{{ path('pack_jetons_index') }}" class="nav-link nav-item">ACHETER VOS JETONS</a>
			<span><a href="{{ path('app_logout') }}" class="btn btn-outline-secondary" role="button">DECONNEXION</a><br><span id="pseudo-name"><img src="images/logo_pseudo.png" alt="Utilisateur" width="25px"> {{ app.user.pseudo }}</span></span>
		{% else %}
			<a href="{{ path('app_login') }}" class="btn btn-outline-primary" role="button">SE CONNECTER</a>
			<a href="{{ path('app_register') }}" class="btn btn-success" role="button">S'INSCRIRE</a>
		{% endif %}
		</nav>
		</header>
		
		<!-- le conteneur fenêtre -->
		<div class="marquee-rtl">
			<!-- le contenu défilant -->
			<div>Enchères en cours : Offre du moments 1 pack de 15 jetons acheter UNE OFFERT</div>
		</div>
		
		<section class="row">
		
		{% for enchere in encheres %}
            <div class="col-md-4 encheres">
					<div>
						<img src="{{ asset(enchere.produit.image) }}" alt="{{ enchere.produit.descriptif }}" width="150px" height="220px"><br>
						<span class="valeur-encheres">Valeur: {{ enchere.produit.prix }} €</span>
					</div>
					<span class="titre-encheres">{{ enchere.produit.descriptif }}</span><br>
					<form action="{{ path('utilisateur_placer') }}" method="POST">
						<input class="input-mise" type="number" step="0.01" min="0.01" max="1000" name="mise">
						<button class="btn btn-light btn-placer" name="id_enchere" value="{{ enchere.id }}">Placer une offre</button>
					</form>
			</div>
		{% endfor %}
		
		</section>
	{% endblock %}
        {% block javascripts %}{% endblock %}
	</body>
</html>
